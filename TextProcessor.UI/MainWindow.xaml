<Window x:Class="TextProcessor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Text Processor Tool" Height="311.456" Width="533.76">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="62*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="304*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Enter a sentence in the box below and click the button.&#xD;&#xA;A distinct list of words in the sentence and the number of times they have occurred should&#xD;&#xA;be shown in the box below." HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="4" Width="485" Height="61" ToolTip="Enter a sentence" FontWeight="Bold" FontSize="11"/>
        <ListBox Name ="DestinationList" HorizontalAlignment="Left" Height="161" Margin="0.2,99,0,0" VerticalAlignment="Top" Width="385" Grid.Column="2" Grid.ColumnSpan="2"/>
        <Button Content="Click me!" HorizontalAlignment="Left" Margin="5,114,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Grid.ColumnSpan="2"/>
        <TextBox Name ="InputTextBox" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="23" Margin="5,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="493" Text="This is a statement, and so is this."/>
    </Grid>
</Window>
